<link rel="stylesheet" href="/css/users_profile.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<link rel="stylesheet" href="/css/header.css">
<link rel="stylesheet" href="/css/footer.css">

<section id="studentsList" style="margin-top: 100px;"> <!-- Adjust the margin-top as needed -->
    <h5>Please fill the below details to enroll a student.</h5>
    <form id="new-students-form" action="/students/create" method="post">
        <input type="text" name="name" placeholder="Student Name" required>
        <input type="email" name="email" placeholder="Student Email" required>
        <input type="text" name="course" placeholder="Enrolled Course" required>
        <input type="text" name="city" placeholder="City" required> 
        <input type="submit" value="Enroll Student">
    </form>
    <div id="students-list-container">
        <ul>
            <li>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">id</th>
                            <th scope="col">Student Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Enrolled Course</th>
                            <th scope="col">City</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% let id = 1; %>
                        <% for (student of students) { %>
                            <tr>
                                <th scope="row"><%= id %></th>
                                <td><%= student.name %></td>
                                <td><%= student.email %></td>
                                <td><%= student.course %></td>
                                <td><%= student.city %></td>
                            </tr>
                            <% id++; %>
                        <% } %>
                    </tbody>
                </table>
            </li>
        </ul>
    </div>
    <form id="export-form" action="/export-students" method="get">
        <input type="submit" value="Export List">
    </form>
</section>
